<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rsv="http://schemas.android.com/apk/res-auto"
    tools:context=".MapActivity">








    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:weightSum="1">
        <RadioGroup
            android:id="@+id/radioGroupWidoki"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#80000000"
            android:padding="4dp" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Normalny"
                android:id="@+id/buttonNormalny" />

            <View
                android:id="@+id/VerticalLine"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#aaa" />




            <Button
                style="?android:attr/buttonStyleSmall"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Teren"
                android:id="@+id/buttonTeren" />

            <View
                android:id="@+id/VerticalLine"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#aaa" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Satelita"
                android:id="@+id/buttonSatelita" />

            <View
                android:id="@+id/VerticalLine"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="#aaa" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLokalizacjaUrzadzenia"
                android:text="UrzÄ…dzenie" />

        </RadioGroup>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            tools:context="activities.MapsActivity"
            android:layout_weight="0.64" />

        <extra.RangeSliderView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="20dp"
            rsv:filledColor="#006600"
            rsv:emptyColor="#a8aeb8"
            rsv:rangeCount="10"
            rsv:barHeightPercent="0.1"
            android:id="@+id/timelineSlider"
            android:orientation="vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/data"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</FrameLayout>